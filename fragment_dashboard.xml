<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardFragment">

    <!-- Bar for displaying average calories burnt -->
    <ProgressBar
        android:id="@+id/average_calories_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:progress="50"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal" />

    <!-- TextView to display average calories burnt -->
    <TextView
        android:id="@+id/average_calories_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Average Calories Burnt"
        android:textSize="18sp" />

    <!-- Bar for displaying maximum calories burnt -->
    <ProgressBar
        android:id="@+id/max_calories_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:progress="70"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal" />

    <!-- TextView to display maximum calories burnt -->
    <TextView
        android:id="@+id/max_calories_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Max Calories Burnt"
        android:textSize="18sp" />


    <!-- Button for adding new record -->
    <Button
        android:id="@+id/new_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add record"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

</LinearLayout>
